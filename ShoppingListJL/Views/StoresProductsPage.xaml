<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListJL.Views.StoresProductsPage"
             xmlns:vm="clr-namespace:ShoppingListJL.ViewModels"
             Title="Produkty wg sklepu">
    <ContentPage.BindingContext>
        <vm:StoresProductsViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="12" Spacing="8">
        <Label Text="Wybierz sklep:" FontAttributes="Bold" />

        <Picker ItemsSource="{Binding Stores}"
                SelectedItem="{Binding SelectedStore}"
                Title="Sklep"
                HorizontalOptions="Fill" />

        <CollectionView ItemsSource="{Binding FilteredProducts}" SelectionMode="None" Margin="0,8,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="1" Padding="8" Margin="0,0,0,8">
                        <VerticalStackLayout>
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="{Binding Name}" FontAttributes="Bold" HorizontalOptions="StartAndExpand" />
                                <Label Text="{Binding Quantity}" />
                                <Label Text="{Binding Unit}" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="Sklep:" FontAttributes="Italic" />
                                <Label Text="{Binding Store}" />
                                <Label Text="Lista:" FontAttributes="Italic" Margin="12,0,0,0" />
                                <Label Text="{Binding ListName}" />
                                <Label Text="Kategoria:" FontAttributes="Italic" Margin="12,0,0,0" />
                                <Label Text="{Binding CategoryName}" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout HorizontalOptions="End">
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>