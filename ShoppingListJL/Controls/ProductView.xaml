<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListJL.Controls.ProductView"
             xmlns:behaviors="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Name="root">

    <HorizontalStackLayout Spacing="8" Padding="6" VerticalOptions="Center">
        <Frame Padding="0" BackgroundColor="Transparent" BorderColor="Transparent">
        <VerticalStackLayout Spacing="8" Padding="6" VerticalOptions="Center">
                <Label Text="{Binding Name}" FontSize="20">
                    <Label.Triggers>
                        <DataTrigger TargetType="Label" Binding="{Binding Bought}" Value="True">
                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                            <Setter Property="TextColor" Value="Grey"/>
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Label Text="Opcjonalne" TextColor="Orange" FontSize="12">
                <Label.Triggers>
                        <DataTrigger TargetType="Label" Binding="{Binding Optional}" Value="False">
                            <Setter Property="IsVisible" Value="False"/>
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
        </VerticalStackLayout>
        </Frame>
        <Editor Text="{Binding Quantity}" VerticalOptions="Center" WidthRequest="60"/>
        <Button Text="+"
                Command="{Binding IncrementQuantityCommand, Source={x:Reference root}}"
                CommandParameter="{Binding .}"
                HeightRequest="48"
                HorizontalOptions="End" />
        <Button Text="-"
                Command="{Binding DecrementQuantityCommand, Source={x:Reference root}}"
                CommandParameter="{Binding .}"
                HeightRequest="48"
                HorizontalOptions="Start" />
        <Label Text="{Binding Unit}" VerticalOptions="Center" />
        <Label Text="{Binding Store}" VerticalOptions="Center" HorizontalOptions="Start" />

        <Button Text="✓"
                Command="{Binding CheckCommand, Source={x:Reference root}}"
                CommandParameter="{Binding .}"
                BackgroundColor="Transparent"
                TextColor="Green"
                VerticalOptions="Center" />
        <Button Text="Usuń"
                Command="{Binding DeleteCommand, Source={x:Reference root}}"
                CommandParameter="{Binding .}"
                BackgroundColor="Transparent"
                TextColor="Red"
                VerticalOptions="Center" />
        <Button Text="Make optional"
                Command="{Binding OptionalItemCommand, Source={x:Reference root}}"
                CommandParameter="{Binding .}"
                BackgroundColor="Transparent"
                TextColor="Orange"
                VerticalOptions="Center" />
    </HorizontalStackLayout>
</ContentView>