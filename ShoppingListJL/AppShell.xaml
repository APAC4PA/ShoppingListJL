<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingListJL.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShoppingListJL"
    Shell.FlyoutBehavior="Disabled"
    Title="ShoppingListJL">
    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:ListsPage}"
        Route="ListsPage" />
        <ShellContent
        Title="Recipies"
        ContentTemplate="{DataTemplate views:Views.RecipesPage}"
        Route="RecipiesPage" />
        <ShellContent
        Title="Sklepy"
        ContentTemplate="{DataTemplate views:Views.StoresProductsPage}"
        Route="StoresProductsPage" />
    </TabBar>
</Shell>
